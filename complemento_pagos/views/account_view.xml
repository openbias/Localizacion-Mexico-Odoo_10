<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_account_config_factoring_settings" model="ir.ui.view">
            <field name="name">account settings factoring</field>
            <field name="model">account.config.settings</field>
            <field name="inherit_id" ref="account.view_account_config_settings"/>
            <field name="arch" type="xml">
                <group name="accounting" position="after">
                    <separator string="Factoraje" groups="account.group_account_user"/>
                    <group name="factoring" groups="account.group_account_user">
                        <label for="id" string="Configuration"/>
                        <div name="group_factoring">
                            <label for="journal_factoring_id"/>
                            <field name="journal_factoring_id" class="oe_inline"/>
                        </div>
                    </group>
                </group>
            </field>
        </record>


        <record id="view_partner_bank_factoring_form" model="ir.ui.view">
            <field name="name">res.partner.bank.factoring.form</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_form"/>
            <field name="arch" type="xml">
                <field name="bank_id" position="after">
                    <field name="factoring"/>
                </field>
            </field>
        </record>
        <record id="view_partner_bank_factoring_tree" model="ir.ui.view">
            <field name="name">res.partner.bank.factoring.tree</field>
            <field name="model">res.partner.bank</field>
            <field name="inherit_id" ref="base.view_partner_bank_tree"/>
            <field name="arch" type="xml">
                <field name="bank_name" position="after">
                    <field name="factoring"/>
                </field>
            </field>
        </record>



        <!-- Contabilidad / Ventas / Pagos -->
        <record model="ir.ui.view" id="view_account_payment_cfdi_form">
            <field name="name">view_account_payment_cfdi_form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <data>
                    <field name="payment_date" position="after">
                        <field name="date_invoice_cfdi" attrs="{'invisible': [('hide_formapago_id', '=', True)]}" />
                        <field name="cfdi_timbre_id" attrs="{'invisible': [('hide_formapago_id', '=', True)]}" />
                    </field>
                    <xpath expr="/form/sheet/group[1]" position="after">
                        <hr />
                        <div attrs="{'invisible': [('hide_formapago_id', '=', True)]}">
                            <separator string="Complemento Pagos CFDI 3.3" colspan="4"/>
                            <group col="4" attrs="{'invisible': [('hide_formapago_id', '=', True)]}" >
                                <field name="formapago_code" invisible="1" />
                                <field name="hide_cfdi_factoraje_id" invisible="1" />
                            </group>
                            <group col="4" attrs="{'invisible': [('hide_formapago_id', '=', True)]}">
                                <field name="partner_factoraje_id" attrs="{'invisible': [('hide_cfdi_factoraje_id', '=', True)]}" />
                                <field name="cfdi_factoraje_id" 
                                    attrs="{'invisible': [('hide_cfdi_factoraje_id', '=', True)], 'required': [('hide_cfdi_factoraje_id', '=', False)]}" 
                                    domain="[('state', '=', 'open'), ('type', '=', 'in_invoice'), ('uuid', '!=', False), ('partner_id', '=', partner_factoraje_id)]" />
                                <field name="formapago_id"
                                        attrs="{'invisible': [('hide_formapago_id', '=', True)], 'required': [('hide_formapago_id', '=', False)]}"/>
                                <field name="spei_tipo_cadenapago" attrs="{'invisible': [('formapago_code', '!=', '03')] }"/>
                            </group>
                            <group attrs="{'invisible': [('spei_tipo_cadenapago', '=', False)]}" >
                                <group string="Sello Pago SPEI">
                                    <pre>
                                        <code>
                                            <field name="spei_sellopago" 
                                                attrs="{'invisible': [('spei_tipo_cadenapago', '!=', '01')], 'required': [('spei_tipo_cadenapago', '=', '01')]}"
                                                readonly="1" nolabel="1" />
                                        </code>
                                    </pre>
                                </group>
                                <group string="Cadena Pago SPEI">
                                    <pre>
                                        <code>
                                            <field name="spei_cadpago" 
                                                attrs="{'invisible': [('spei_tipo_cadenapago', '!=', '01')], 'required': [('spei_tipo_cadenapago', '=', '01')]}"
                                                readonly="1" nolabel="1" />
                                        </code>
                                    </pre>
                                </group>
                                <group string="Certificado Pago SPEI" colspan="4">
                                    <pre>
                                        <code>
                                            <field name="spei_certpago" 
                                                attrs="{'invisible': [('spei_tipo_cadenapago', '!=', '01')], 'required': [('spei_tipo_cadenapago', '=', '01')]}"
                                                readonly="1" nolabel="1" />
                                        </code>
                                    </pre>
                                </group>
                            </group>
                            <hr />
                        </div>
                        <field name="hide_formapago_id" invisible="1"/>
                        
                    </xpath>
                </data>
            </field>
        </record>

        <!-- Formulario Facturas -->
