                <link href="https://fonts.googleapis.com/css?family=PT+Mono" rel="stylesheet"/>
                <link href="/cfdi_nomina/static/src/less/layout_background.less" rel="stylesheet" type="text/less"/>
            </xpath>
        </template>

        
        <record id="view_company_form_inherit_riesgo" model="ir.ui.view">
            <field name="name">view.company.form.inherit.riesgo</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="hr_mx_ext.view_company_form_inherit_hr"/>
            <field name="arch" type="xml">
                <field name="registro_patronal_id" position="after">
                    <field name="curp"/>
                    <field name="riesgo_puesto_id"/>
                </field>
            </field>
        </record>
       
    </data>
